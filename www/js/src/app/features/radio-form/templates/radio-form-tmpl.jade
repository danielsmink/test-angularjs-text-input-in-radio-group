form
  ul
    //- total due option
    li
      label(
        for="totalDueInput"
      )
        input(
          id="totalDueInput"
          type="radio"
          name="amountInputRadio"
          value="vm.appModel.amountDue"
          ng-model="vm.appModel.amount"
          ng-focus="isManualInputSelected = false;"
        )
        span {{vm.appModel.amountDue | currency}} Total Due

    //- past due option
    li
      label(
        for="pastDueAmountInput"
      )
        input(
          id="pastDueAmountInput"
          type="radio"
          name="amountInputRadio"
          value="vm.appModel.amountPastDue"
          ng-model="vm.appModel.amount"
          ng-focus="isManualInputSelected = false;"
        )
        span {{vm.appModel.amountPastDue | currency}} Past Due

    //- manual input option
    li
      input(
        id="manualAmountInput"
        type="radio"
        name="amountInputRadio"
        ng-model="vm.appModel.amount"
        ng-checked="isManualInputSelected"
      )
      input(
        name="paymentAmount"
        id="paymentAmount"
        type="text"
        ng-model="vm.appModel.amount"
        ng-focus="isManualInputSelected = true;"
        ng-change="isManualInputSelected = true;"
        ng-click="isManualInputSelected = true;"
      )

  button(
    type="button"
    ng-click="vm.submitForm()"
  )
    span Submit Form